<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.developers.perloti.desafioandroidtechfit">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:name=".ApplicationManager"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.activities.FeedActivity"
            android:label="Feed Tecnonutri">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".controller.activities.FeedDetailActivity"
            android:label="Detail Feed"
            android:screenOrientation="portrait" />


        <activity
            android:name=".controller.activities.ProfileDetailActivity"
            android:label="Detail Profile"
            android:screenOrientation="portrait" />

    </application>

</manifest>